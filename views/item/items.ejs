<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion des Items</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Include Font Awesome if not already present -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>
    <main class="container mx-auto p-4">
      <h1 class="text-3xl font-bold text-center mb-12 mt-8">Tous les items enregistrés</h1>

      <div class="mb-6 text-center">
        <a href="/items/new" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Ajouter un
          item</a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
        <% items.forEach(item=> { %>
          <div class="bg-white p-4 rounded-lg shadow-lg">
            <h3 class="text-lg font-bold text-gray-800 mb-2">
              <%= item.name %>
            </h3>
            <p><%= item.category %></p>
            <p><%= item.price %>€</p>
            <p><%= item.user.username %></p>
            <div class="flex justify-end space-x-2">
              <a href="/items/<%= item._id %>/edit" class="p-2 hover:text-blue-700">
                <i class="fas fa-pencil-alt"></i>
              </a>
              <form action="/items/<%= item._id %>?_method=DELETE" method="post">
                <button type="submit" class="p-2 hover:text-red-700">
                  <i class="fas fa-trash-alt text-black"></i>
                </button>
              </form>
            </div>
          </div>
          <% }); %>
      </div>
    </main>
</body>

</html>